<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>dist</id>
    <formats>
        <format>xml</format>
    </formats>
    <files>
        <file>
            <source>src/assembly/README.txt</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/assembly/run.sh</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>src/assembly/dictionary.txt</source>
            <outputDirectory>/config</outputDirectory>
        </file>
        <file>
            <source>src/assembly/application.properties</source>
            <outputDirectory>/config/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>target/wordsearch-0.0.1.jar</source>
            <outputDirectory>/bin/</outputDirectory>
        </file>
    </files>
</assembly>
